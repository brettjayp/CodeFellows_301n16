<!DOCTYPE html>
<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/theme.css" />
  <link rel="stylesheet" href="/css/module.css" />
  <link rel="stylesheet" href="/css/state.css" />
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
  <script id="character_template" type="text/x-handlebars-template">
    <div class="character">
      <header>
        <h2> {{name}} </h2>
      </header>
      <span> {{likes}} </span>
      <button>Upvote</button>
    </div>
  </script>
</head>


<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
    <button id="more">Get More</button>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button>Upvote</button>
      </div>
      <% } %>

    </section>
  </main>

  <%- include('./layout/footer') %>
  
  <script src="/js/app.js"></script>
</body>

</html>